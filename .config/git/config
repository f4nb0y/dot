# git-config(1)

[include]
	path = config.local

[user]
	name = Rob B
	email = github@0x7e.net

[alias]
	alias	= ! "git config --list | sed -En 's,^alias\\.([^=]+)=,\\1	,p'"
	b	= branch --all
	d	= diff --ignore-blank-lines --ignore-space-change
	ds	= diff --ignore-blank-lines --ignore-space-change --staged
	dd	= diff --name-status
	l	= log --oneline
	l10	= log --oneline -10
	ll	= log --name-status
	ll1	= log --name-status -1
	s	= status

[clone]
	defaultRemoteName = github

[commit]
	gpgSign = true

[push]
	autoSetupRemote = true

[tag]
	gpgSign = true
